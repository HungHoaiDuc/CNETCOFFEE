<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="card_form" prefHeight="220.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cnetcoffee.Controller.User.CardController">
   <children>
      <VBox alignment="CENTER" prefHeight="220.0" prefWidth="200.0" spacing="10" style="-fx-background-color: #fff; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

         <!-- Tên và giá sản phẩm -->
         <HBox alignment="CENTER" spacing="5">
            <Label fx:id="lb_productName" maxWidth="110" style="-fx-font-weight: bold;" text="Bánh Mì" wrapText="true" />
            <Label fx:id="lb_product_price" style="-fx-text-fill: orange;" text="0.0 vnđ" />
         </HBox>

         <!-- Ảnh sản phẩm -->
         <ImageView fx:id="product_imgView" fitHeight="100.0" fitWidth="130.0" preserveRatio="true" />

         <!-- Spinner số lượng và nút Add -->
         <HBox alignment="CENTER" spacing="10">
            <Spinner fx:id="product_spinner" prefWidth="70.0" />
            <Button fx:id="btn_add" style="-fx-background-color: orange; -fx-text-fill: white; -fx-font-weight: bold;" text="Thêm" />
         </HBox>

      </VBox>
   </children>
</AnchorPane>
